<div id="account-edit" class="container">
  <section class="breadcrumbs">
    <div class="item-parent col-12 col-lg-6">
      <ul class="item-parent">
        {% for breadcrumb in breadcrumbs %}
          <li class="item">
            <a href="{{ breadcrumb.href }}">
              <p>{{ breadcrumb.text }}</p>
            </a>
          </li>
        {% endfor %}
      </ul>
    </div>
  </section>


  <h2>Gegevens wijzigen</h2>

  <div class="row">
    <div class="col-sm-8">
      <div id="content" class="{{ class }}">
        <form action="/update-customer">
          {% if form.errors %}
            {{ form.errors | default_errors }}
          {% endif %}
          <fieldset>
            <div class="form-group required">
              <label class="col-12 control-label" for="first_name">Voornaam</label>
              <div class="col-12">
                <input
                  type="text"
                  name="customer[first_name]"
                  id="first_name"
                  
                  class="form-control"
                  value="{{ customer.first_name }}" />
              </div>
            </div>
            <div class="form-group required">
              <label class="col-12 control-label" for="last_name">Achternaam</label>
              <div class="col-12">
                <input
                  type="text"
                  name="customer[last_name]"
                  id="last_name"
                  
                  class="form-control"
                  value="{{ customer.last_name }}" />
              </div>
            </div>
            <div class="form-group required">
              <label class="col-12 control-label" for="email_address">E-mailadres</label>
              <div class="col-12">
                <input
                  type="email"
                  name="customer[email]"
                  id="email_address"
                  class="form-control"
                  
                  value="{{ customer.email }}" />
              </div>
            </div>
            <div class="form-group required">
              <label class="col-12 control-label" for="phone_number">Telefoon</label>
              <div class="col-12">
                <input
                  type="tel"
                  name="customer[note][Phone Number]"
                  id="phone_number"
                  class="form-control"
                  
                  value="{{ customer.note['Phone Number:'] }}" />
              </div>
            </div>
            <div class="form-group required">
              <label for="coc_number">KvK-nummer</label>
              <input
                class="form-control"
                type="text"
                name="customer[note][Coc Number]"
                id="coc_number"
                value="{{ customer.note['Coc Number'] }}"
                >
            </div>
            <div class="form-group required">
              <label for="vat_number">Btw-nummer</label>
              <input
                class="form-control"
                type="text"
                name="customer[note][Vat Number]"
                id="vat_number"
                value="{{ customer.note['Vat Number'] }}"
               >
            </div>

          </fieldset>
          <div class="buttons clearfix">
            <!-- <div class="pull-left"><a href="{{ back }}" class="btn-green my-3 d-inline-block">{{ button_back }}</a></div> -->
            <div class="text-right">
              <input
                type="submit"
                value="Opslaan"
                class="btn-green mt-3 d-inline-block" />
            </div>
          </div>
        </form>
        <div class="clearfix" style="height: 75px;"></div>
      </div>
    </div>
    {% render 'column_right' %}</div>
</div>


<style>
  .form-group .col-12 {
    padding-left: 0;
    padding-right: 0;
  }
</style>